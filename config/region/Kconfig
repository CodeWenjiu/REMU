            config EMU_MEM_SDRAM_SIZE
                hex "EMU SDRAM Size"
                default 0x02000000
                help
                    Size of SDRAM for EMU platform (hex).
                    
            config EMU_MEM_SDRAM_FLAG
                string "EMU SDRAM Flag"
                default "0b00000111"

            config EMU_MEM_Chip_BASE
                hex "EMU Chip Base Address"
                default 0xc0000000
                help
                    Base address for EMU platform's Chip.

            config EMU_MEM_Chip_SIZE
                hex "EMU Chip Size"
                default 0x00020000
                help
                    Size of Chip for EMU platform (hex).
                    
