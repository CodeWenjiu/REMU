menu "Regions"
    menu "EMU Platform"
        menu "Memory Regions"
            config EMU_MEM_SRAM_BASE
                hex "EMU SRAM Base Address"
                default 0x0f000000
                help
                    Base address for EMU platform's SRAM.

            config EMU_MEM_SRAM_SIZE
                hex "EMU SRAM Size"
                default 0x00002000
                help
                    Size of SRAM for EMU platform (hex).
                    
            config EMU_MEM_SRAM_FLAG
                string "EMU SRAM Flag"
                default "0b00000111"

            config EMU_MEM_MROM_BASE
                hex "EMU MROM Base Address"
                default 0x20000000
                help
                    Base address for EMU platform's MROM.

            config EMU_MEM_MROM_SIZE
                hex "EMU MROM Size"
                default 0x00001000
                help
                    Size of MROM for EMU platform (hex).
                    
            config EMU_MEM_MROM_FLAG
                string "EMU MROM Flag"
                default "0b00000101"

            config EMU_MEM_FLASH_BASE
                hex "EMU FLASH Base Address"
                default 0x30000000
                help
                    Base address for EMU platform's FLASH.

            config EMU_MEM_FLASH_SIZE
                hex "EMU FLASH Size"
                default 0x10000000
                help
                    Size of FLASH for EMU platform (hex).
                    
            config EMU_MEM_FLASH_FLAG
                string "EMU FLASH Flag"
                default "0b00000111"

            config EMU_MEM_PSRAM_BASE
                hex "EMU PSRAM Base Address"
