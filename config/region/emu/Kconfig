menu "EMU Platform"
    choice
        prompt "EMU Memory Map"
        default EMU_Memory_Map_EMU_default

    config EMU_Memory_Map_EMU_default
        bool "EMU_default"

    config EMU_Memory_Map_NZEA_NPC
        bool "NZEA_NPC"

    config EMU_Memory_Map_NZEA_YSYXSOC
        bool "NZEA_YSYXSOC"
            
    endchoice

    menu "Memory Regions"

        menu "SRAM"
        depends on EMU_Memory_Map_NZEA_YSYXSOC

            config EMU_NEMU_MEM_SRAM_BASE
                hex "EMU SRAM Base Address"
                default 0x0f000000
                help
                    Base address for EMU platform's SRAM.

            config EMU_NEMU_MEM_SRAM_SIZE
                hex "EMU SRAM Size"
                default 0x00002000
                help
                    Size of SRAM for EMU platform (hex).

            config EMU_NEMU_MEM_SRAM_FLAG
                string "EMU SRAM Flag"
                default "0b00000111"
                help
                    Flag for SRAM region.

        endmenu

        menu "MROM"
        depends on EMU_Memory_Map_NZEA_YSYXSOC

            config EMU_NEMU_MEM_MROM_BASE
                hex "EMU MROM Base Address"
                default 0x20000000
                help
                    Base address for EMU platform's MROM.

            config EMU_NEMU_MEM_MROM_SIZE
                hex "EMU MROM Size"
                default 0x00001000
                help
                    Size of MROM for EMU platform (hex).

            config EMU_NEMU_MEM_MROM_FLAG
                string "EMU MROM Flag"
                default "0b00000101"
                help
                    Flag for MROM region.

        endmenu

        menu "FLASH"
        depends on EMU_Memory_Map_NZEA_YSYXSOC

            config EMU_NEMU_MEM_FLASH_BASE
                hex "EMU FLASH Base Address"
                default 0x30000000
                help
                    Base address for EMU platform's FLASH.

            config EMU_NEMU_MEM_FLASH_SIZE
                hex "EMU FLASH Size"
                default 0x10000000
                help
                    Size of FLASH for EMU platform (hex).

            config EMU_NEMU_MEM_FLASH_FLAG
                string "EMU FLASH Flag"
                default "0b00000111"
                help
                    Flag for FLASH region.

        endmenu

        menu "PSRAM"

            config EMU_NEMU_MEM_PSRAM_BASE
                hex "EMU PSRAM Base Address"
                default 0x80000000
                help
                    Base address for EMU platform's PSRAM.

            config EMU_NEMU_MEM_PSRAM_SIZE
                hex "EMU PSRAM Size"
                default 0x00400000
                help
                    Size of PSRAM for EMU platform (hex).
                    
            config EMU_NEMU_MEM_PSRAM_FLAG
                string "EMU PSRAM Flag"
                default "0b00000111"

        endmenu

        menu "SDRAM"
        depends on EMU_Memory_Map_NZEA_YSYXSOC

            config EMU_NEMU_MEM_SDRAM_BASE
                hex "EMU SDRAM Base Address"
                default 0xa0000000
                help
                    Base address for EMU platform's SDRAM.

            config EMU_NEMU_MEM_SDRAM_SIZE
                hex "EMU SDRAM Size"
                default 0x02000000
                help
                    Size of SDRAM for EMU platform (hex).
                    
            config EMU_NEMU_MEM_SDRAM_FLAG
                string "EMU SDRAM Flag"
                default "0b00000111"

        endmenu

        menu "Chip"
        depends on EMU_Memory_Map_NZEA_YSYXSOC

            config EMU_NEMU_MEM_Chip_BASE
                hex "EMU Chip Base Address"
                default 0xc0000000
                help
                    Base address for EMU platform's Chip.

            config EMU_NEMU_MEM_Chip_SIZE
                hex "EMU Chip Size"
                default 0x00020000
                help
                    Size of Chip for EMU platform (hex).
                    
            config EMU_NEMU_MEM_Chip_FLAG
                string "EMU Chip Flag"
                default "0b00000011"
        endmenu

    endmenu

    menu "Device Regions"

        menu "Serial"

            config EMU_NEMU_DEV_Serial_BASE
                hex
                default 0x100003f8 if EMU_Memory_Map_EMU_default
                default 0x10000000 if EMU_Memory_Map_NZEA_NPC

            config EMU_NEMU_DEV_Serial_SIZE
                hex "EMU Serial Size"
                default 0x00000004
                help
                    Size of Serial for EMU platform (hex).
                    
            config EMU_NEMU_DEV_Serial_FLAG
                string "EMU Serial Flag"
                default "0b00000011"

        endmenu

        menu "Timer"

            config EMU_NEMU_DEV_Timer_BASE
                hex
                default 0x10000048 if EMU_Memory_Map_EMU_default
                default 0xa0000048 if EMU_Memory_Map_NZEA_NPC

            config EMU_NEMU_DEV_Timer_SIZE
                hex "EMU Timer Size"
                default 0x00000008
                help
                    Size of Timer for EMU platform (hex).
                    
            config EMU_NEMU_DEV_Timer_FLAG
                string "EMU Timer Flag"
                default "0b00000001"

        endmenu

    endmenu
endmenu