menu "BASE_CONFIG"

    menu "RESET_VECTOR"

    config Emu_Dm_BASE_RESET_VECTOR
        hex "Set Emu DirectlyMap Reset Vector"
        default 0x80000000
        help
            Set the reset vector for the Emu DirectlyMap platform.

    config Emu_Sc_BASE_RESET_VECTOR
        hex "Set Emu SingleCycle Reset Vector"
        default 0x80000000
        help
            Set the reset vector for the Emu SingleCycle platform.

    config Nzea_Npc_BASE_RESET_VECTOR
        hex "Set Nzea Npc Reset Vector"
        default 0x80000000
        help
            Set the reset vector for the Nzea platform.
            
    config Nzea_Ysyxsoc_BASE_RESET_VECTOR
        hex "Set Nzea Ysyxsoc Reset Vector"
        default 0x30000000
        help
            Set the reset vector for the Nzea platform.
            
    config Nzea_JydRemote_BASE_RESET_VECTOR
        hex "Set Nzea JydRemote Reset Vector"
        default 0x80000000
        help
            Set the reset vector for the Nzea platform.

    endmenu

endmenu
